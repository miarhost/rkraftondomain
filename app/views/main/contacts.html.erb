<div class="center jumbotron">
<% provide(:title, "Contacts") %>



    <section class="background-gray-lightest">
      <div class="container">
        <div class="breadcrumbs">
          <ul class="breadcrumb">
            <li><a href="<%= home_path %>"><%= t('layouts.application.home') %></a></li>
           
          </ul>
        </div>
        <h1 class="heading"></h1>
        <p class="lead"><%= t('.like') %></p>
      </div>
    </section>
    <section>  
      <div id="contact" class="container">
        <div class="row">
          <div class="col-lg-4">
            <div class="box-simple">
              <div class="icon"><i class="pe-7s-map-2"></i></div>
              <h4 class="heading margin-bottom"><%= t('.address') %></h4>
              <p><br><%= t('.kyiv') %><br><%= t('.ukraine')%></p>
            </div>
            <div class="box-simple">
              <div class="icon"><i class="pe-7s-phone"></i></div>
              <h4 class="heading margin-bottom"><%= t('.contact') %></h4>
              <p class="text-muted"></p>
              <p><strong>+38(066)289-91-33, <br> +38(063)561-87-23, <br> telegram, viber <br> ritz.rkraft@gmail.com </strong></p>
            </div>
            <div class="box-simple">
              <div class="icon"><i class="pe-7s-mail-open"></i></div>
              <h4 class="heading margin-bottom"><%= t('.enqmail') %></p>
              <ul>
                <li><a href="mailto:">ritz.rkraft@gmail.com</a></li>
              
              </ul>
            </div>
          </div>
          <div class="col-lg-7 col-lg-offset-1">
            <div class="icon"><i class="pe-7s-pen"></i></div>
            <h4 class="heading margin-bottom"><%= t('.inqform') %></h4>
            <p class="text-muted"><%= t('.place') %></p>
            <div class="form-holder">
              <%= form_for(@inquiry, path: '/inquiries', method: :post) do |f| %>
                <div class="row">
                <div class="col-sm-6">
                 
                    <label for="firstname"><%= t('.first_name') %></label>
                    <%= f.text_field :first_name, placeholder: t('.first_name') %>
                  </div>
                </div>
                <div class="col-sm-6">
                  
                    <label for="secondname"><%= t('.last_name') %></label>
                    <%= f.text_field :second_name, placeholder: t('.last_name') %>
                  
                </div>
                <div class="col-sm-6">
                 
                    <label for="email">Email</label>
                    <%= f.email_field :email, placeholder: t('.mailin') %>
                    
                  
                </div>
                <div class="col-sm-6">
                  
                    <label for="subject"><%= t('.subject') %></label>
                    <%= f.text_field :subject, placeholder: t('.subject') %>
                  
                </div>
                <div class="col-sm-12">
                  
                    <label for="message"><%= t('.message') %></label>
                    <%= f.text_field :message, placeholder: t('.details') %>
                 
                </div>
                <div class="col-sm-12">
                   <div class="form-group">
                  <%= f.button t('.submit'), class: 'submit', type: 'submit' %>
                  <% end %>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <div id="map">
    
    <img src="https://maps.googleapis.com/maps/api/staticmap?center=Ромашки,+Київська+обл.,+09623/@49.848152,30.308178,10.5z/data=!4m13!1m7!3m6!1s0x40d3777a169dab73:0x163de9c524752f3d!2z0KDQvtC80LDRiNC60LgsINCa0LjRl9Cy0YHRjNC60LAg0L7QsdC7LiwgMDk2MjM!3b1!8m2!3d49.7318727!4d30.5992011!3m4!1s0x40d3777a169dab73:0x163de9c524752f3d!8m2!3d49.7318727!4d30.5992011&size=400x400&zoom=17&key=AIzaSyCImVA9mhtyEYa5kABn2kVi4f9gQPtNG1k"></img>

</div>

    <footer class="footer">
      <div class="footer__block">
        <div class="container">
          <div class="row">
            <div class="col-md-8 col-sm-12">
              <h4 class="heading"><%= t('.about') %></h4>
              <p><%= t('.about_p') %></p>
            </div>
            

              
            </div>
          </div>
        </div>
      </div>
    </footer>
